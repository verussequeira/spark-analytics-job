<!DOCTYPE aspectj PUBLIC "-//AspectJ//DTD//EN" "http://www.eclipse.org/aspectj/dtd/aspectj.dtd">
<aspectj>
    <weaver>
        <!-- Weave classes in our package -->
        <include within="com.company.analytics..*"/>
        <!-- Exclude Spark's internal classloaders to reduce noise -->
        <exclude within="org.codehaus.commons.compiler..*"/>
        <exclude within="sun.reflect..*"/>
    </weaver>
    
    <aspects>
        <!-- Register our aspect -->
        <aspect name="com.company.analytics.instrumentation.MethodLoggingAspect"/>
    </aspects>
</aspectj>